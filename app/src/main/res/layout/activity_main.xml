<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Sign In Button -->
    <Button
        android:id="@+id/buttonSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:background="@drawable/rounded_button"/>

    <!-- Sign Out Button -->
    <Button
        android:id="@+id/buttonSignOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        android:background="@drawable/rounded_button"/>

    <!-- Go to Food Page Button -->
    <Button
        android:id="@+id/buttonGoToFoodPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Go_Food"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/buttonSignOut"
        android:layout_marginBottom="64dp"
        android:visibility="gone"
        android:background="@drawable/rounded_button"/>

    <ImageView
        android:id="@+id/pixelEggView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:src="@drawable/pixelartegg"
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/pixelFirstView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="3.0"
        android:scaleY="3.0"
        android:src="@drawable/pixelartfirst"
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/pixelSecondView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="3.0"
        android:scaleY="3.0"
        android:src="@drawable/pixelartsecond"
        android:padding="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>


</RelativeLayout>
